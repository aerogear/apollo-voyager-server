{
  "name": "@aerogear/apollo-voyager-server-monorepo",
  "private": true,
  "scripts": {
    "test": "echo ok",
    "bootstrap": "lerna bootstrap --hoist --no-ci",
    "clean": "lerna clean --yes",
    "lint": "tslint '*/*/src/**/*.ts' '*/*/test/**/*.ts'",
    "format": "tslint '*/*/src/**/*.ts' '*/*/test/**/*.ts' --fix",
    "cleanInstall": "lerna exec npm install --ignore-scripts",
    "compile": "lerna exec -- npm run compile",
    "compile:clean": "lerna exec -- npm run clean-compile",
    "watch": "lerna exec --parallel --stream -- npm run watch"
  },
  "dependencies": {
    "@aerogear/apollo-voyager-context": "file:./packages/apollo-voyager-context",
    "@aerogear/apollo-voyager-keycloak": "file:./packages/apollo-voyager-keycloak",
    "@aerogear/apollo-voyager-metrics": "file:./packages/apollo-voyager-metrics",
    "@aerogear/apollo-voyager-server": "file:./packages/apollo-voyager-server",
    "@aerogear/apollo-voyager-tools": "file:./packages/apollo-voyager-tools"
  },
  "devDependencies": {
    "graphql": "^14.0.2",
    "@types/node": "^10.12.10",
    "lerna": "^3.4.3",
    "typescript": "^3.1.6",
    "tslint": "^5.11.0"
  }
}
