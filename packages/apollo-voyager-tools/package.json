{
  "name": "@aerogear/apollo-voyager-tools",
  "version": "0.1.5",
  "description": "Tooling library used across Apollo Voyager Server modules.",
  "author": "AeroGear Team<aerogear@googlegroups.com>",
  "homepage": "http://aerogear.org",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/aerogear/apollo-voyager-server/tree/master/packages/apollo-voyager-tools"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "compile": "tsc --build tsconfig.json",
    "watch": "tsc --build tsconfig.json --watch",
    "test": "ava -v '*.test.ts' '**/*.test.ts'",
    "compile:clean": "tsc --build tsconfig.json --clean"
  },
  "dependencies": {
    "graphql-tools": "^4.0.3"
  },
  "devDependencies": {
    "ava": "1.0.0-rc.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
  },
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
