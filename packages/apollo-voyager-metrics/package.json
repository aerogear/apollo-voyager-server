{
  "name": "@aerogear/apollo-voyager-metrics",
  "version": "0.1.0",
  "description": "Adds Prometheus metrics to Apollo Voyager Server.",
  "author": "AeroGear Team<aerogear@googlegroups.com>",
  "homepage": "http://aerogear.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/aerogear/apollo-voyager-server/tree/master/packages/apollo-voyager-metrics"
  },
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "compile": "tsc --build tsconfig.json",
    "watch": "tsc --build tsconfig.json --watch",
    "compile:clean": "tsc --build tsconfig.json --clean",
    "test": "ava -v '*.test.ts' '**/*.test.ts'"
  },
  "dependencies": {
    "prom-client": "^11.2.0",
    "@aerogear/apollo-voyager-tools": "0.1.0",
    "apollo-server": "^2.2.2",
    "apollo-server-express": "^2.2.2"
  },
  "devDependencies": {
    "ava": "1.0.0-rc.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
