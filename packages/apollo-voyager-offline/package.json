      "ts-node/register"
    ]
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/debug": "0.0.31",
    "@types/mocha": "^5.2.5",
    "ava": "1.0.0-rc.2",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nyc": "^11.7.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "@aerogear/apollo-voyager-tools": "^1.0.0",
    "debug": "^4.1.0"
  }
